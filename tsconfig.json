{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "strict": true,
    "downlevelIteration": true,
    "types": [ "node" ],
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}